<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="MapView">
        <item name="mapbox_uiLogo">false</item>
        <item name="mapbox_uiAttribution">false</item>
        <item name="mapbox_uiCompass">false</item>
        <item name="mapbox_uiCompassDrawable">@drawable/ic_locate_me</item>
        <item name="mapbox_uiCompassGravity">right|bottom</item>
        <item name="mapbox_uiCompassFadeFacingNorth">false</item>
        <item name="mapbox_cameraZoomMin">0.0</item>
        <item name="mapbox_cameraZoomMax">15.0</item>
    </style>

    <style name="MapView.LocationComponent" parent="@style/mapbox_LocationComponent">
        <item name="mapbox_foregroundDrawable">@drawable/ic_mylocation_fg</item>
        <item name="mapbox_backgroundDrawable">@drawable/ic_mylocation_bg</item>
        <item name="mapbox_gpsDrawable">@drawable/ic_mylocation_full</item>

        <item name="mapbox_enableStaleState">false</item>

        <item name="mapbox_elevation">0dp</item>

        <item name="mapbox_accuracyAlpha">0.15</item>
        <item name="mapbox_accuracyColor">#3324305E</item>

        <item name="mapbox_maxZoomIconScale">1</item>
        <item name="mapbox_minZoomIconScale">1</item>

        <item name="mapbox_trackingAnimationDurationMultiplier">0.25</item>
    </style>

    <style name="CheckboxStyle" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        // for checked
        <item name="android:textColorSecondary">@color/light_gray</item>
        // for unchecked
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_top_white</item>
    </style>

    <style name="AppBarTurquoiseStyle">
        <item name="statusBarBackground">@color/turquoise</item>
        <item name="colorPrimaryDark">@color/turquoise</item>
        <item name="android:background">@color/turquoise</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.BlackHighEmphasis">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/black_high_emphasis</item>
    </style>

    <style name="BaseText.DarkGray">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="BaseText.DarkGray.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.DarkGray.SanSerif">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseText.DarkGray.SanSerif.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="BaseText.Green.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.Turquoise">
        <item name="android:textColor">@color/turquoise</item>
    </style>

    <style name="BaseText.Turquoise.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.Turquoise.16">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BaseText.Turquoise.20">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="BaseText.White">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseText.White.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.White.16">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BaseText.White.20">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="BaseText.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseText.Black.13">
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseText.Black.14">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="BaseText.Black.15">
        <item name="android:textSize">@dimen/_15sp</item>
    </style>

    <style name="BaseText.Black.16">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BaseText.Black.24">
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="BaseText.Black.24.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BaseText.Black.32">
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="BaseText.Black.34">
        <item name="android:textSize">@dimen/_34sp</item>
    </style>

    <style name="BaseText.ProfileSetup">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24sp</item>
    </style>

    <style name="BaseText.ProfileImage">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BaseButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/_13sp</item>
    </style>

    <style name="BaseButton.Link">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:padding">@dimen/_8dp</item>
    </style>

    <style name="BaseButton.Dialog" parent="BaseButton.Link">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BaseButton.Primary">
        <item name="android:background">@drawable/btn_primary_selector</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_17dp</item>
        <item name="android:paddingBottom">@dimen/_17dp</item>
        <item name="android:textColor">@color/btn_primary_text_color_selector</item>
    </style>

    <style name="BaseButton.Primary.Static">
        <item name="android:background">@drawable/btn_primary_enabled</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_17dp</item>
        <item name="android:paddingBottom">@dimen/_17dp</item>
        <item name="android:textColor">@color/btn_primary_text_color_selector</item>
    </style>


    <style name="BaseButton.Primary.Middle">
        <item name="android:background">@drawable/btn_primary_middle_selector</item>
        <item name="android:textColor">@color/btn_primary_middle_text_color_selector</item>
    </style>

    <style name="BaseButton.Primary.Small">
        <item name="android:background">@drawable/btn_primary_small_selector</item>
        <item name="android:paddingStart">@dimen/_12dp</item>
        <item name="android:paddingEnd">@dimen/_12dp</item>
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:paddingBottom">@dimen/_7dp</item>
        <item name="android:textColor">@color/btn_primary_middle_text_color_selector</item>
    </style>

    <style name="BaseButton.Secondary">

    </style>

    <style name="BaseButton.Secondary.Small">
        <item name="android:background">@drawable/btn_secondary_small_selector</item>
        <item name="android:paddingStart">@dimen/_12dp</item>
        <item name="android:paddingEnd">@dimen/_12dp</item>
        <item name="android:paddingTop">@dimen/_7dp</item>
        <item name="android:paddingBottom">@dimen/_7dp</item>
        <item name="android:textColor">@color/btn_secondary_small_text_color_selector</item>
    </style>

    <style name="BaseButton.Tertiary">
        <item name="android:textColor">@color/btn_tertiary_text_color_selector</item>
        <item name="android:background">@drawable/btn_tertiary_selector</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_17dp</item>
        <item name="android:paddingBottom">@dimen/_17dp</item>
    </style>

    <style name="BaseButton.skip">
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:background">@drawable/btn_green_border</item>
    </style>

    <style name="BaseButton.upload">
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:background">@drawable/btn_green_border</item>
    </style>

    <style name="BaseButton.EvDelete">
        <item name="android:textColor">@color/turquoise</item>
        <item name="android:background">@drawable/btn_green_border</item>
    </style>

    <style name="BaseButton.AddEv">
        <item name="textAllCaps">false</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_17dp</item>
        <item name="android:paddingBottom">@dimen/_17dp</item>
    </style>


    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxStrokeColor">@color/et_box_stroke_color_selector</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="startIconDrawable">@drawable/ic_point</item>
        <item name="startIconTint">@color/black</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/_minus_8dp</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextAppearance">@style/SearchHintTextAppearance</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SearchHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/light_turquoise</item>
    </style>

    <style name="BaseFragment">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseFragment.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
        <item name="android:background">@drawable/bg_drawer_button_ripple</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>